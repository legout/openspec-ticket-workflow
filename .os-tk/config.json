{
  "templateRepo": "legout/openspec-ticket-opencode-starter",
  "templateRef": "v0.1.0",
  "useWorktrees": false,
  "worktreeDir": ".worktrees",
  "defaultParallel": 3,
  "mainBranch": "main",
  "autoPush": true,
  "unsafe": {
    "allowParallel": true,
    "allowDirtyDone": true,
    "commitStrategy": "prompt"
  },
  "planner": {
    "model": "openai/gpt-5.2",
    "reasoningEffort": "high",
    "temperature": 0.5
  },
  "worker": {
    "model": "zai-coding-plan/glm-4.7",
    "fallbackModels": [
      "minimax/MiniMax-M2.1"
    ],
    "reasoningEffort": "none",
    "temperature": 0.75
  },
  "reviewer": {
    "autoTrigger": false,
    "categories": [
      "spec-compliance",
      "tests",
      "security",
      "quality"
    ],
    "createTicketsFor": [
      "error"
    ],
    "skipTags": [
      "no-review",
      "wip"
    ],
    "scouts": [
      { "id": "opus45", "model": "google/antigravity-claude-opus-4-5-thinking", "reasoningEffort": "high", "temperature": 0 },
      { "id": "gpt52",  "model": "openai/gpt-5.2-codex", "reasoningEffort": "high", "temperature": 0 },
      { "id": "mini",   "model": "openai/gpt-5.1-codex-mini", "reasoningEffort": "medium", "temperature": 0 },
      { "id": "grok",   "model": "opencode/grok-fast", "reasoningEffort": "none", "temperature": 0 }
    ],
    "adaptive": {
      "enabled": true,
      "maxParallelScouts": 3,
      "thresholds": {
        "small":  { "maxFiles": 4,  "maxChangedLines": 200 },
        "medium": { "maxFiles": 12, "maxChangedLines": 800 }
      },
      "defaults": {
        "small":  ["grok", "mini"],
        "medium": ["grok", "gpt52"],
        "large":  ["grok", "gpt52", "opus45"]
      }
    },
    "aggregatorStrong": {
      "model": "openai/gpt-5.2",
      "reasoningEffort": "medium",
      "temperature": 0
    }
  }
}
